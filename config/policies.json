{
  "policies": [
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/set-query-body)"
      },
      "name": "set-query-body",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "UpstreamFirebaseAdminAuthInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "expirationOffsetSeconds": 300,
          "serviceAccountJson": "$env(SERVICE_ACCOUNT_JSON)",
          "tokenRetries": 3
        }
      },
      "name": "upstream-firebase-admin-auth-inbound",
      "policyType": "upstream-firebase-admin-auth-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/firestore-response-to-json)",
        "options": {
          "documentId": "id"
        }
      },
      "name": "firestore-to-json",
      "policyType": "custom-code-outbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/json-to-firestore-request)"
      },
      "name": "json-to-firestore",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "ApiKeyInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "allowUnauthenticatedRequests": false,
          "cacheTtlSeconds": 60
        }
      },
      "name": "api-key-inbound",
      "policyType": "api-key-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/set-user-id)"
      },
      "name": "set-user-id",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "default",
        "module": "$import(./modules/check-access-todo)"
      },
      "name": "check-access",
      "policyType": "custom-code-inbound"
    },
    {
      "handler": {
        "export": "RequestValidationInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "includeRequestInLogs": false,
          "logLevel": "info",
          "validateBody": "reject-and-log",
          "validatePathParameters": "log-only",
          "validateQueryParameters": "log-only"
        }
      },
      "name": "request-validation-inbound",
      "policyType": "request-validation-inbound"
    },
    {
      "handler": {
        "export": "MonetizationInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "meters": {
            "requests": 1
          }
        }
      },
      "name": "monetization-requests",
      "policyType": "monetization-inbound"
    },
    {
      "handler": {
        "export": "MonetizationInboundPolicy",
        "module": "$import(@zuplo/runtime)",
        "options": {
          "meters": {
            "requests": 1,
            "todoCreates": 1
          }
        }
      },
      "name": "monetize-creates",
      "policyType": "monetization-inbound"
    }
  ]
}